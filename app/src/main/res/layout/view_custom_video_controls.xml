<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/view_clip">


    <ImageView
        android:layout_width="@dimen/volume_icon_dimen"
        android:layout_height="@dimen/volume_icon_dimen"
        android:paddingBottom="@dimen/volume_padding"
        android:paddingTop="@dimen/volume_top_padding"
        android:paddingStart="@dimen/volume_start_padding"
        android:paddingEnd="@dimen/volume_end_padding"
        android:id="@+id/ivVolume"
        android:layout_gravity="bottom|start"
        android:src="@drawable/ic_volume_off" />

    <ImageView
        android:layout_width="@dimen/volume_icon_dimen"
        android:layout_height="@dimen/volume_icon_dimen"
        android:paddingBottom="@dimen/volume_padding"
        android:paddingTop="@dimen/volume_top_padding"
        android:layout_marginStart="@dimen/share_margin_start"
        android:layout_gravity="bottom|start"
        android:visibility="visible"
        android:id="@+id/ivShare"
        android:src="@drawable/ic_share" />

    <ImageView
        android:layout_width="@dimen/volume_icon_dimen"
        android:layout_height="@dimen/volume_icon_dimen"
        android:paddingBottom="@dimen/volume_padding"
        android:paddingTop="@dimen/volume_top_padding"
        android:layout_gravity="bottom|end"
        android:visibility="visible"
        android:id="@+id/ivFullScreen"
        android:src="@drawable/ic_fullscreen" />
</merge>